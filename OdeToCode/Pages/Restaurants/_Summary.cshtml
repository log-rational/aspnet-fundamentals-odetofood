@using OdeToFood.Core;
@model Restaurant

    <div class="card mb-4">
        <div class="card-header">
            <h3>@Model.Name</h3>
            
        </div>
        <div class="card-body">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div class="card-footer" >
            <a class="btn" asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="fas fa-search"></i></a>
            <a class="btn" asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="far fa-edit"></i></a>
            <a class="btn btn-lg" asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="fas fa-trash"></i></a>
        </div>
    </div>